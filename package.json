{
  "name": "connectome-ts",
  "version": "0.1.0",
  "description": "Experimental TypeScript implementation of Connectome without DAG",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example": "ts-node examples/minimal-example.ts",
    "example:saliency": "ts-node examples/test-saliency-rendering.ts",
    "test:starship": "ts-node examples/test-starship-scenario.ts",
    "test:render": "ts-node examples/test-final-render.ts",
    "test:states": "ts-node examples/test-state-changes.ts",
    "test:timeline": "ts-node examples/test-state-timeline.ts",
    "test:anthropic": "ts-node examples/test-anthropic-simple.ts",
    "test:console": "ts-node examples/test-console-chat.ts",
    "test:interactive": "ts-node examples/test-interactive-box.ts",
    "test:dispenser": "ts-node examples/test-state-init.ts",
    "example:dispenser": "ts-node examples/dispenser-with-host.ts",
    "example:dispenser:reset": "ts-node examples/dispenser-with-host.ts --reset",
    "example:dispenser:debug": "ts-node examples/dispenser-with-host.ts --debug-llm",
    "axon:server": "ts-node examples/axon-test/server.ts",
    "test:axon": "ts-node examples/test-axon.ts",
    "example:discord": "ts-node examples/discord-with-host.ts",
    "example:discord:reset": "ts-node examples/discord-with-host.ts --reset",
    "example:discord:debug": "ts-node examples/discord-with-host.ts --debug-llm",
    "test:notes": "ts-node examples/test-shared-notes.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "session-server": "ts-node src/testing/start-session-server.ts",
    "session-server:dev": "nodemon --watch src/testing --exec ts-node src/testing/start-session-server.ts",
    "session-server:mcp": "SESSION_SERVER_PORT=3101 ts-node src/testing/start-session-server.ts",
    "mcp-server": "ts-node src/testing/mcp-stdio-server.ts",
    "session-cli": "ts-node src/testing/session-cli.ts"
  },
  "keywords": [
    "llm",
    "agent",
    "veil",
    "connectome"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chokidar": "^3.5.3",
    "dotenv": "^17.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.0.0",
    "express": "^4.18.2",
    "jest": "^29.0.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "ws": "^8.16.0",
    "@types/strip-ansi": "^7.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@modelcontextprotocol/sdk": "^1.11.2",
    "node-pty": "^1.0.0",
    "strip-ansi": "^7.1.0"
  }
}
